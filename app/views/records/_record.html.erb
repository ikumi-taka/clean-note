<div class="record">
  <div class="upper-record">
    <div class="record-user">
      <%= record.user.name %>
    </div>
    <table>
    <tbody>
    <%# <% @records.each do |record| %>
    <%# <div id="likes_buttons_<%= record.id"> %>
      <tr id="likes_buttons_<%= record.id %>">
      <%= render partial: 'likes/like', locals:{record: record} %>
      </tr>
    </tbody>
    </table>
    <div class="record-date">
      <%= l record.created_at %>
    </div>
  </div>
  <div class="lower-record">
    <div class="record-content">
      <%= record.content %>
    </div>
  </div>
</div>
